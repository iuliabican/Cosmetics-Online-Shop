@model Cosmetics_Online_Shop.Models.CosmeticTypes
@{
    ViewData["Title"] = "Create";
}
<br/>

<h2 class="text-info">Create Cosmetic Type</h2>
<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CosmeticType"></label>
            </div>
            <div class="col-5">
                <input asp-for="CosmeticType" class="form-control"/>
            </div>
            <span asp-validation-for="CosmeticType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save"/>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
